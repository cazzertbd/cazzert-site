---
import ContactForm from "@/components/contact/ContactForm";
import data from "@/configs/data";
import MainLayout from "@/layouts/MainLayout.astro";

const pageTitle = "Contact Us | Cazzert";
const pageDescription = "Get in touch with Cazzert for custom cake orders, inquiries, and special occasions. We're here to make your celebrations sweeter.";
---

<MainLayout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen">
    <!-- Header Section -->
    <section class="bg-bg-cta py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-4xl text-center">
          <h1 class="font-Secondary text-text-base mb-4 text-4xl font-bold md:text-5xl">Contact Us</h1>
          <p class="text-text-muted text-lg md:text-xl">Ready to create something sweet? We'd love to hear from you and help make your celebrations unforgettable.</p>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-7xl">
          <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:items-start lg:gap-16">
            <!-- Contact Information -->
            <div class="space-y-8">
              <div>
                <h2 class="font-Secondary text-text-base mb-6 text-3xl font-bold">Let's Start a Sweet Conversation</h2>
                <p class="text-text-muted text-lg leading-relaxed">Whether you're planning a birthday party, wedding, or just want to treat yourself to something delicious, we're here to make it happen with our handcrafted cakes and pastries.</p>
              </div>

              <!-- Contact Cards -->
              <div class="space-y-6">
                <!-- Email -->
                <div class="group border-border/20 bg-bg-feature-card rounded-xl border p-6 shadow-sm transition-all duration-200 hover:shadow-md">
                  <div class="flex items-start gap-4">
                    <div class="bg-primary-light/20 flex h-12 w-12 items-center justify-center rounded-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="text-primary h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h3 class="text-text-base mb-2 text-lg font-semibold">Email Us</h3>
                      <p class="text-text-muted mb-3 text-sm">For custom orders, inquiries, and special requests</p>
                      <a href={`mailto:${data.contact.email}`} class="text-primary hover:text-primary-dark text-sm font-medium transition-colors">
                        {data.contact.email}
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Phone -->
                <div class="group border-border/20 bg-bg-feature-card rounded-xl border p-6 shadow-sm transition-all duration-200 hover:shadow-md">
                  <div class="flex items-start gap-4">
                    <div class="bg-primary-light/20 flex h-12 w-12 items-center justify-center rounded-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="text-primary h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h3 class="text-text-base mb-2 text-lg font-semibold">Call Us</h3>
                      <p class="text-text-muted mb-3 text-sm">Speak directly with our bakers for urgent orders</p>
                      <a href={`tel:${data.contact.phone}`} class="text-primary hover:text-primary-dark text-sm font-medium transition-colors">
                        {data.contact.phone}
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Address -->
                <div class="group border-border/20 bg-bg-feature-card rounded-xl border p-6 shadow-sm transition-all duration-200 hover:shadow-md">
                  <div class="flex items-start gap-4">
                    <div class="bg-primary-light/20 flex h-12 w-12 items-center justify-center rounded-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="text-primary h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h3 class="text-text-base mb-2 text-lg font-semibold">Visit Our Bakery</h3>
                      <p class="text-text-muted mb-3 text-sm">Come see where the magic happens</p>
                      <p class="text-text-base text-sm font-medium">
                        {data.contact.address}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="my-6">
              <div class="border-border/20 bg-bg-feature-card h-fit rounded-2xl border p-8 shadow-sm">
                <div class="mb-6">
                  <h2 class="font-Secondary text-text-base mb-3 text-2xl font-bold">Send us a Sweet Message</h2>
                  <p class="text-text-muted text-sm">Fill out the form below and we'll get back to you as soon as possible.</p>
                </div>

                <ContactForm client:load />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="bg-bg-cta py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-4xl">
          <div class="mb-12 text-center">
            <h2 class="font-Secondary text-text-base mb-4 text-3xl font-bold">Frequently Asked Questions</h2>
            <p class="text-text-muted text-lg">Common questions about our cakes and services</p>
          </div>

          <div class="space-y-6">
            <details class="faq-item">
              <summary>How far in advance should I place a custom cake order?</summary>
              <p>For custom cakes, we recommend placing your order at least 3-5 days in advance. For elaborate wedding cakes or special designs, please give us 1-2 weeks notice to ensure we can create exactly what you envision.</p>
            </details>

            <details class="faq-item">
              <summary>Do you accommodate dietary restrictions and allergies?</summary>
              <p>Absolutely! We offer gluten-free, sugar-free, and vegan options for most of our cakes. Please mention any dietary restrictions or allergies when placing your order, and we'll work with you to create a delicious alternative.</p>
            </details>

            <details class="faq-item">
              <summary>What areas do you deliver to?</summary>
              <p>We currently deliver within Dhaka city and selected nearby areas. Delivery charges apply based on distance. For orders outside our regular delivery zone, please contact us to discuss special arrangements.</p>
            </details>

            <details class="faq-item">
              <summary>Can I see a sample or taste test before ordering?</summary>
              <p>Yes! Visit our bakery to see our display cakes and try samples of our most popular flavors. For custom designs, we can show you portfolio images of similar work we've done in the past.</p>
            </details>

            <details class="faq-item">
              <summary>What payment methods do you accept?</summary>
              <p>We accept cash on delivery, bank transfers, and mobile payments (bKash, Nagad). For large orders, we may require a 50% advance payment to confirm your booking.</p>
            </details>

            <details class="faq-item">
              <summary>Can you write custom messages on cakes?</summary>
              <p>Of course! We can write custom messages, names, and even create edible photo prints for your cakes. Just let us know what you'd like when placing your order.</p>
            </details>
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>

<style>
  @reference "@/styles/global.css";

  .faq-item {
    @apply bg-bg-feature-card border-border/20 cursor-pointer rounded-lg border p-6 shadow-sm transition-all duration-200 select-none;
  }

  .faq-item:hover {
    @apply shadow-md;
  }

  .faq-item summary {
    @apply text-text-base cursor-pointer text-lg font-semibold transition-colors duration-200;
  }

  .faq-item:hover summary {
    @apply text-primary;
  }

  .faq-item > p {
    @apply text-text-muted mt-4 text-sm leading-relaxed;
  }

  .faq-item[open] summary {
    @apply text-primary mb-2;
  }
</style>

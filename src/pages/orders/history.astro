---
import { OrderHistoryPage } from "@/components/orders/OrderHistoryPage";
import MainLayout from "@/layouts/MainLayout.astro";

export const prerender = false;
---

<MainLayout title="Order History | Cazzert">
  <main class="container mx-auto px-4 py-8">
    <div class="mx-auto max-w-6xl">
      <div class="mb-8 text-center">
        <h1 class="font-Secondary text-text-base mb-2 text-3xl font-bold">Order History</h1>
        <p class="text-text-muted">View all your previous orders by verifying your email address</p>
      </div>

      <OrderHistoryPage client:load />
    </div>
  </main>
</MainLayout>

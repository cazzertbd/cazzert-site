---
import { Icon } from "astro-icon/components";

// Social media links array
const socialLinks = [
  { icon: "simple-icons:facebook", url: "#", label: "Facebook" },
  { icon: "simple-icons:instagram", url: "#", label: "Instagram" },
  { icon: "simple-icons:x", url: "#", label: "X" },
  { icon: "simple-icons:youtube", url: "#", label: "YouTube" },
];

// Quick links array
const quickLinks = [
  { name: "Our Cakes", href: "#featured" },
  { name: "About Us", href: "#about" },
  { name: "Testimonials", href: "#testimonials" },
  { name: "Custom Orders", href: "#order" },
  { name: "Contact Us", href: "#contact" },
  { name: "Privacy Policy", href: "/privacy" },
];
---

<footer class="bg-bg-alt border-border/30 border-t pt-12 pb-6 transition-colors duration-300">
  <div class="container mx-auto px-6">
    <!-- Main footer content -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand column -->
      <div class="flex flex-col items-center text-center md:items-start md:text-left">
        <a href="#home" class="group inline-block">
          <span class="font-Secondary text-primary block text-3xl font-bold tracking-tight">Cazzert</span>
          <span class="text-text-subtle -mt-1 block text-xs tracking-wider uppercase">Since 2021</span>
        </a>
        <p class="text-text-muted mt-4 max-w-xs text-sm">Crafting delicious moments with artisanal cakes and pastries for every celebration. Each creation is baked with premium ingredients and decorated with passion.</p>

        <!-- Social media icons with improved hover effect -->
        <div class="mt-5 flex space-x-2">
          {
            socialLinks.map((social) => (
              <a href={social.url} class="text-text-muted hover:bg-primary-light/10 hover:text-primary rounded-full p-2 transition-colors" aria-label={social.label}>
                <Icon size={27} name={social.icon} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Quick links -->
      <div class="flex flex-col items-center md:items-start">
        <h3 class="text-text-base mb-4 text-lg font-semibold">Quick Links</h3>
        <ul class="space-y-3">
          {
            quickLinks.map((link) => (
              <li>
                <a href={link.href} class="text-text-muted hover:text-primary flex items-center transition-colors">
                  <Icon name="simple-line-icons:arrow-right" class="mr-2 h-3 w-3" />
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Condensed contact info (reduced duplication with Contact component) -->
      <div class="flex flex-col items-center md:items-start">
        <h3 class="text-text-base mb-4 text-lg font-semibold">Contact</h3>
        <ul class="space-y-3">
          <li class="text-text-muted flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="text-primary mt-1 mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>hello@cazzert.com</span>
          </li>
          <li class="text-text-muted flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="text-primary mt-1 mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>(123) 456-7890</span>
          </li>
        </ul>

        <!-- Business hours -->
        <h3 class="text-text-base mt-6 mb-3 text-lg font-semibold">Business Hours</h3>
        <ul class="space-y-1">
          <li class="text-text-muted flex justify-between gap-1">
            <span>Mon-Fri:</span>
            <span>9AM - 6PM</span>
          </li>
          <li class="text-text-muted flex justify-between gap-1.5">
            <span>Saturday:</span>
            <span>10AM - 4PM</span>
          </li>
          <li class="text-text-muted flex justify-between gap-1">
            <span>Sunday:</span>
            <span>Closed</span>
          </li>
        </ul>
      </div>

      <!-- Newsletter signup -->
      <div class="flex flex-col items-center md:items-start">
        <h3 class="text-text-base mb-4 text-lg font-semibold">Stay Updated</h3>
        <p class="text-text-muted mb-4 text-sm">Subscribe to our newsletter for special offers and delicious updates!</p>

        <form class="w-full max-w-md">
          <div class="relative">
            <input type="email" placeholder="Your email address" class="border-border bg-bg focus:border-primary focus:ring-primary w-full rounded-full py-2 pr-10 pl-4 text-sm focus:ring-1 focus:outline-none" required />
            <button type="submit" class="bg-primary hover:bg-primary-dark absolute top-1/2 right-1 -translate-y-1/2 rounded-full p-1.5 text-white transition-colors" aria-label="Subscribe">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </button>
          </div>
        </form>

        <!-- Fixed payment methods with inline SVGs -->
        <div class="mt-6">
          <h4 class="text-text-muted mb-2 text-xs font-medium tracking-wider uppercase">Payment Methods</h4>
          <div class="flex flex-wrap gap-2">
            <!-- Visa Card -->
            <div class="bg-bg-alt border-border/50 flex h-8 w-12 items-center justify-center rounded border p-1">
              <Icon size={30} name="simple-icons:visa" />
            </div>

            <!-- Mastercard -->
            <div class="bg-bg-alt border-border/50 flex h-8 w-12 items-center justify-center rounded border p-1">
              <Icon size={30} name="simple-icons:mastercard" />
            </div>

            <!-- American Express -->
            <div class="bg-bg-alt border-border/50 flex h-8 w-12 items-center justify-center rounded border p-1">
              <Icon size={30} name="simple-icons:americanexpress" />
            </div>

            <!-- PayPal -->
            <div class="bg-bg-alt border-border/50 flex h-8 w-12 items-center justify-center rounded border p-1">
              <Icon size={30} name="simple-icons:paypal" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Decorative divider with cake icon instead of location pin -->
    <div class="relative my-6">
      <div class="absolute inset-0 flex items-center">
        <div class="border-t-border/30 w-full border-t"></div>
      </div>
      <div class="relative flex justify-center">
        <span class="bg-bg-footer text-primary px-3">
          <Icon name="simple-icons:cakephp" class="h-6 w-6" />
        </span>
      </div>
    </div>

    <!-- Bottom footer -->
    <div class="text-center">
      <span class="text-text-subtle flex w-full items-center justify-center gap-1 py-0.5 text-sm">
        Made with <span class="text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
            <g fill="none">
              <path fill="currentColor" d="M19.071 13.142L13.414 18.8a2 2 0 0 1-2.828 0l-5.657-5.657A5 5 0 1 1 12 6.072a5 5 0 0 1 7.071 7.07" opacity="0.16"></path><path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19.071 13.142L13.414 18.8a2 2 0 0 1-2.828 0l-5.657-5.657a5 5 0 0 1 7.07-7.071a5 5 0 0 1 7.072 7.071"></path>
            </g>
          </svg>
        </span> in Sweet City
      </span>
      <p class="text-text-subtle text-sm">
        &copy; <span id="current-year"></span> Cazzert Cakes. All Rights Reserved.
      </p>
    </div>
  </div>
</footer>

<script>
  // Set current year in footer
  document.addEventListener("DOMContentLoaded", () => {
    const yearElement = document.getElementById("current-year");
    if (yearElement) {
      yearElement.textContent = new Date().getFullYear().toString();
    }
  });
</script>
